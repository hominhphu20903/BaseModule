<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GradientTextView">
        <attr format="boolean" name="isVertical"/>
        <attr format="color" name="startColor"/>
        <attr format="color" name="endColor"/>
    </declare-styleable>

    <declare-styleable name="GradientStrokeView">
        <attr name="startColorStroke" format="color"/>
        <attr name="endColorStroke" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="cornerRadius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ColorPickerView">
        <attr name="sliderBarStrokeCap" format="enum">
            <enum name="Butt" value="0" />
            <enum name="Round" value="1" />
            <enum name="Square" value="2" />
        </attr>

        <attr name="sliderStrokeSize" format="dimension"/>
        <attr name="sliderStrokeColor" format="color"/>

    </declare-styleable>
</resources>